{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GDW Lock File",
  "type": "object",
  "required": [
    "version",
    "resolved"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "enum": [1],
      "description": "Lock file format version"
    },
    "resolved": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9._-]+@\\d+\\.\\d+\\.\\d+$": {
          "type": "object",
          "required": ["sha256", "path"],
          "properties": {
            "sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$",
              "description": "SHA256 hash of the GDW spec"
            },
            "path": {
              "type": "string",
              "description": "Relative path to the GDW spec file"
            },
            "resolved_at": {
              "type": "string",
              "format": "date-time",
              "description": "When this reference was resolved"
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "Other GDW references this depends on"
              }
            },
            "metadata": {
              "type": "object",
              "properties": {
                "tool_versions": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                      "type": "string"
                    }
                  }
                },
                "runner_hashes": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                      "type": "string",
                      "pattern": "^[a-f0-9]{64}$"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "integrity": {
      "type": "object",
      "properties": {
        "checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA256 of the entire lock content"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "generated_by": {
          "type": "string",
          "description": "Tool that generated this lock file"
        }
      }
    }
  }
}