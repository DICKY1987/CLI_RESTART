{
  "name": "gdw-schemas",
  "version": "1.0.0",
  "type": "module",
  "description": "JSON Schema validation tools for GDW specifications",
  "scripts": {
    "compile": "node ajv_compile.mjs",
    "validate:gdw": "node validate_gdw.mjs",
    "validate:chain": "node validate_chain.mjs",
    "validate:lock": "node validate_lock.mjs",
    "validate:chain-refs": "node validate_chain_refs.mjs",
    "validate:ai-config": "node validate_ai_config.mjs",
    "test": "npm run validate:gdw && npm run validate:chain && npm run validate:lock"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}