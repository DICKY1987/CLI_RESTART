{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Workflow",
  "type": "object",
  "additionalProperties": true,
  "$defs": {
    "simplified_operation": {
      "title": "Simplified Operation",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": ["string", "number", "null"] },
        "type": { "type": ["string", "null"] },
        "complexity": { "type": ["integer", "number", "null"], "minimum": 0 },
        "file_count": { "type": ["integer", "number", "null"], "minimum": 0 },
        "file_size_kb": { "type": ["integer", "number", "null"], "minimum": 0 }
      }
    }
  },
  "properties": {
    "name": { "type": ["string", "null"] },
    "simplified": { "type": ["boolean", "null"] },
    "steps": { "type": ["array", "null"] },
    "operations": {
      "type": ["array", "null"],
      "items": { "$ref": "#/$defs/simplified_operation" }
    }
  }
}
