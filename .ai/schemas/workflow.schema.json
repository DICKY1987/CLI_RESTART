{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Workflow",
  "type": "object",
  "additionalProperties": true,
  "$defs": {
    "step": {
      "title": "Workflow Step",
      "type": "object",
      "required": ["id", "name", "actor"],
      "additionalProperties": true,
      "properties": {
        "id": { 
          "type": "string",
          "description": "Unique identifier for the step (e.g., '1.001')"
        },
        "name": { 
          "type": "string",
          "description": "Human-readable name for the step"
        },
        "actor": { 
          "type": "string",
          "description": "Adapter to execute this step"
        },
        "with": {
          "type": "object",
          "description": "Parameters for the adapter"
        },
        "when": {
          "type": "string",
          "description": "Conditional expression for step execution"
        },
        "retry": {
          "type": "object",
          "properties": {
            "max": { "type": "integer", "minimum": 1 },
            "backoff": { "type": "string", "enum": ["linear", "exponential"] }
          }
        },
        "emits": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Artifacts produced by this step"
        },
        "on_fail": {
          "type": "string",
          "enum": ["pause_for_review", "abort", "continue", "stop"],
          "description": "Action to take on step failure"
        }
      }
    },
    "simplified_operation": {
      "title": "Simplified Operation",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": ["string", "number", "null"] },
        "type": { "type": ["string", "null"] },
        "complexity": { "type": ["integer", "number", "null"], "minimum": 0 },
        "file_count": { "type": ["integer", "number", "null"], "minimum": 0 },
        "file_size_kb": { "type": ["integer", "number", "null"], "minimum": 0 }
      }
    },
    "role_assignments": {
      "title": "Role Assignments",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "planner": { "type": ["string", "null"] },
        "editor": { "type": ["string", "null"] },
        "reviewer": { "type": ["string", "null"] },
        "tester": { "type": ["string", "null"] },
        "analyzer": { "type": ["string", "null"] }
      }
    },
    "cost_enforcement": {
      "title": "Cost Enforcement",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "max_tokens": { "type": ["integer", "null"], "minimum": 0 },
        "cost_limit": { "type": ["string", "null"] },
        "ai_fallback_only": { "type": ["boolean", "null"] }
      }
    }
  },
  "properties": {
    "name": { "type": ["string", "null"] },
    "simplified": { "type": ["boolean", "null"] },
    "framework_version": { "type": ["string", "null"], "enum": ["simplified-25ops", null] },
    "policy": { "$ref": "#/$defs/cost_enforcement" },
    "role_assignments": { "$ref": "#/$defs/role_assignments" },
    "steps": { 
      "type": ["array", "null"],
      "items": { "$ref": "#/$defs/step" },
      "description": "Workflow steps to execute in order"
    },
    "operations": {
      "type": ["array", "null"],
      "items": { "$ref": "#/$defs/simplified_operation" }
    }
  }
}
