{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Syntax Check Gate",
  "description": "Verification gate for syntax validation across multiple programming languages",
  "type": "object",
  "required": ["gate_type", "languages", "failure_action"],
  "properties": {
    "gate_type": {
      "type": "string",
      "const": "syntax_check"
    },
    "languages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "python",
          "javascript",
          "typescript",
          "java",
          "go",
          "rust",
          "c",
          "cpp",
          "csharp",
          "php",
          "ruby",
          "yaml",
          "json"
        ]
      },
      "description": "Programming languages to validate syntax for"
    },
    "tools": {
      "type": "object",
      "patternProperties": {
        "^(python|javascript|typescript|java|go|rust|c|cpp|csharp|php|ruby|yaml|json)$": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "description": "Command to run for syntax checking"
            },
            "parser": {
              "type": "string",
              "description": "Parser or tool name"
            },
            "options": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Command line options"
            }
          },
          "required": ["command"]
        }
      },
      "description": "Language-specific syntax checking tools",
      "default": {
        "python": {"command": "python -m ast", "parser": "ast"},
        "javascript": {"command": "node --check", "parser": "v8"},
        "typescript": {"command": "tsc --noEmit", "parser": "typescript"},
        "json": {"command": "python -m json.tool", "parser": "json"},
        "yaml": {"command": "python -c \"import yaml; yaml.safe_load(open('{}'))\"", "parser": "pyyaml"}
      }
    },
    "failure_action": {
      "type": "string",
      "enum": ["abort_modification", "rollback", "continue_with_warning"],
      "description": "Action to take when syntax check fails"
    },
    "timeout_seconds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 300,
      "default": 30,
      "description": "Maximum time to wait for syntax check"
    },
    "exclude_patterns": {
      "type": "array",
      "items": {"type": "string"},
      "description": "File patterns to exclude from syntax checking"
    },
    "strict_mode": {
      "type": "boolean",
      "default": true,
      "description": "Whether to use strict syntax checking"
    }
  },
  "additionalProperties": false
}
