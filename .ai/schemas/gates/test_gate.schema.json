{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Suite Gate",
  "description": "Verification gate for running test suites with coverage requirements",
  "type": "object",
  "required": ["gate_type", "test_command", "required_pass_rate"],
  "properties": {
    "gate_type": {
      "type": "string",
      "const": "test_suite"
    },
    "test_command": {
      "type": "string",
      "description": "Command to run the test suite",
      "examples": [
        "pytest tests/ -v --tb=short",
        "npm test",
        "go test ./...",
        "cargo test",
        "mvn test"
      ]
    },
    "test_patterns": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Test file patterns to include",
      "default": ["tests/**/*test*.py", "test/**/*.py", "*_test.go", "**/*_test.js"]
    },
    "required_pass_rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 100,
      "description": "Minimum percentage of tests that must pass"
    },
    "coverage_threshold": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Minimum code coverage percentage required"
    },
    "coverage_command": {
      "type": "string",
      "description": "Command to generate coverage report",
      "examples": [
        "pytest --cov=src --cov-report=json",
        "npm run test:coverage",
        "go test -coverprofile=coverage.out"
      ]
    },
    "timeout_seconds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1800,
      "default": 300,
      "description": "Maximum time to wait for tests to complete"
    },
    "parallel_execution": {
      "type": "boolean",
      "default": true,
      "description": "Whether to run tests in parallel"
    },
    "fail_fast": {
      "type": "boolean",
      "default": false,
      "description": "Stop running tests after first failure"
    },
    "retry_count": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5,
      "default": 0,
      "description": "Number of times to retry failed tests"
    },
    "environment_variables": {
      "type": "object",
      "patternProperties": {
        "^[A-Z_][A-Z0-9_]*$": {"type": "string"}
      },
      "description": "Environment variables to set when running tests"
    },
    "affected_files_only": {
      "type": "boolean",
      "default": false,
      "description": "Only run tests for files affected by modifications"
    },
    "test_frameworks": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "pytest",
          "unittest",
          "jest",
          "mocha",
          "junit",
          "go_test",
          "cargo_test",
          "rspec",
          "phpunit"
        ]
      },
      "description": "Test frameworks being used"
    },
    "failure_action": {
      "type": "string",
      "enum": ["abort_modification", "rollback", "continue_with_warning"],
      "default": "abort_modification",
      "description": "Action to take when tests fail"
    }
  },
  "additionalProperties": false
}
