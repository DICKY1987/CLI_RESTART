{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Job: Core (Claude)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-File", ".ai/scripts/orchestrate.ps1",
        "-Command", "run-job",
        "-Name", "core-refactor",
        "-Tool", "claude_code",
        "-Branch", "refactor/core-claude",
        "-Worktree", "../wt-core",
        "-Tests", "pytest -q"
      ]
    },
    {
      "label": "Job: Quality (Aider)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-File", ".ai/scripts/orchestrate.ps1",
        "-Command", "run-job",
        "-Name", "quality-fixes",
        "-Tool", "aider_local",
        "-Branch", "feat/quality-aider",
        "-Worktree", "../wt-quality",
        "-Tests", "pytest -q && ruff check"
      ]
    },
    {
      "label": "Triage: Diagnose→Route→Fix",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-File", ".ai/scripts/orchestrate.ps1",
        "-Command", "start-triage",
        "-Files", "src/**/*.py",
        "-Prompt", "Stabilize types and imports"
      ]
    },
    {
      "label": "Start all jobs (parallel)",
      "dependsOn": [
        "Job: Core (Claude)",
        "Job: Quality (Aider)"
      ],
      "dependsOrder": "parallel"
    }
  ]
}