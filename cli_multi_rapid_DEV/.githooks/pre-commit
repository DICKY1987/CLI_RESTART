#!/usr/bin/env bash
set -euo pipefail

# Prevent committing directly to main
if [ "$(git rev-parse --abbrev-ref HEAD)" = "main" ]; then
  echo "Do not commit on main. Run: repo_flow begin/save."
  exit 1
fi

# Fast local checks (customize or replace with your linters)
if [ -x ".det-tools/scripts/quick_validate.sh" ]; then
  ./.det-tools/scripts/quick_validate.sh
fi

